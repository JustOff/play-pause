{
  "name": "play-pause",
  "title": "Play/Pause",
  "description": "Adds a Play/Pause toggle onto tabs that contain an HTML5 audio/video player.",
  "author": "Daniel Kamkha",
  "license": "MIT",
  "version": "1.2.2",
  "engines": {
    "firefox": ">=38.0a1",
    "{8de7fcbb-c55c-4fbe-bfc5-fc555c87dbc4}": ">=27.1.0b1"
   },
  "homepage": "https://github.com/DanielKamkha/PlayPauseFirefox",
  "permissions": {
    "multiprocess": true,
    "private-browsing": true,
    "cross-domain-content": [
      "https://www.youtube.com",
      "https://w.soundcloud.com/"
    ]
  },
  "locales": {
    "fr": {
      "title": "Play/Pause",
      "description": "Ajoute un bouton Lecture/Pause sur les onglets qui contiennent un lecteur audio/video HTML5."
    },
    "ru": {
      "title": "Play/Pause",
      "description": "Добавляет переключатель Play/Pause на вкладки содержащие аудио- или видео-плеер HTML5."
    }
  },
  "preferences": [
    {
      "name": "do-embeds",
      "title": "Enable Play/Pause for embedded media",
      "description": "",
      "type": "bool",
      "value": false
    },
    {
      "name": "invert-indicator",
      "title": "Invert Play/Pause indicator logic",
      "description": "",
      "type": "bool",
      "value": false
    },
    {
      "name": "hotkey-mode",
      "title": "Play/Pause hotkey action",
      "type": "menulist",
      "value": 2,
      "options": [
        {
          "value": "2",
          "label": "smart_pause"
        },
        {
          "value": "1",
          "label": "toggle_play_pause"
        }
      ]
    },
    {
      "name": "choose-hotkey",
      "title": "Choose hotkey",
      "description": "",
      "type": "control",
      "label": "Configure"
    },
    {
      "name": "hotkey-value",
      "title": "hotkey-value",
      "type": "string",
      "value": "Accel-Alt-P",
      "hidden": true
    }
  ]
}
